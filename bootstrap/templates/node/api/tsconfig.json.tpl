{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["node", "express"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test"]
}
