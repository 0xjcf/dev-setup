{
	"name": "next-ui",
	"description": "Next.js UI project configuration",
	"version": "1.0.0",
	"common": {
		"devDependencies": [
			"@biomejs/biome",
			"vitest",
			"@vitejs/plugin-react",
			"@testing-library/react",
			"@testing-library/jest-dom",
			"@testing-library/user-event",
			"jsdom",
			"@types/testing-library__jest-dom"
		],
		"scripts": {
			"test": "NODE_ENV=test vitest run",
			"test:watch": "NODE_ENV=test vitest",
			"lint": "biome check .",
			"format": "biome format --write .",
			"update-deps": "pnpm update"
		}
	},
	"next": {
		"dependencies": [
			"next",
			"react",
			"react-dom",
			"@types/react",
			"@types/react-dom"
		],
		"devDependencies": [
			"@types/node",
			"autoprefixer",
			"postcss",
			"tailwindcss"
		],
		"scripts": {
			"dev": "next dev",
			"build": "next build",
			"start": "next start",
			"lint": "next lint",
			"test": "vitest run",
			"format": "biome format . --write",
			"lint-fix": "biome check . --write",
			"update-deps": "pnpm update"
		},
		"structure": {
			"directories": [
				"app",
				"app/components",
				"app/lib",
				"app/styles",
				"test",
				"public"
			],
			"files": {
				"app/page.tsx": "export default function Page() {\n  return (\n    <main>\n      <h1>Welcome to Next.js</h1>\n    </main>\n  );\n}",
				"test/index.test.tsx": "import { describe, it, expect } from 'vitest';\nimport { render, screen } from '@testing-library/react';\nimport Page from '../app/page';\n\ndescribe('Page', () => {\n  it('renders a heading', () => {\n    render(<Page />);\n    const heading = screen.getByRole('heading', { level: 1 });\n    expect(heading).toBeDefined();\n  });\n});"
			}
		}
	}
}
